<h1 class="text-center">Eat-Da-Burger!</h1>


<div class="row justify-content-center">
  <div class="col-5">
    <h2 class="text-center">Delicious Burgers, Waiting to be Devoured!</h2>
    <ul>
      
      {{#each burgers}}
        {{#unless devoured}}
        <div class="row">
          <h3>{{name}}</h3>
          <button type="button" class="btn btn-danger devour" data-id="{{id}}" data-newdevour="{{devour}}">Devour it!</button>
          </div>
        {{/unless}}
      {{/each}}
      
    </ul>
  </div>

  <div class="col-5">
    <h2 class="text-center">Devoured Burgers!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{name}}
          <button type="button" class="btn btn-danger devour float-right" data-id="{{id}}" data-newdevour="{{devour}}">Devoured!</button>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="text-center">
  <h5>Add a Burger</h5>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name" placeholder="Enter new burger name!">
    </div>

    <button type="submit">Add Burger!</button>
  </form>
</div>
